{
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": true
    },
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": true,
    }
}
