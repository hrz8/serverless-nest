{
  "name": "serverless-nest",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "rm -rf dist && tsc --p tsconfig.json -w",
    "build": "rm -rf dist && tsc --p tsconfig.json -d",
    "start": "nest start",
    "start:local": "nest start --watch",
    "sls:offline": "sls offline --httpPort 4098 --stage dev --skipCacheInvalidation",
    "db:sync": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop",
    "db:migrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "github.com/hrz8/serverles-nest"
  },
  "author": "Hirzi N",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^8.2.3",
    "@nestjs/core": "^8.2.3",
    "@nestjs/platform-express": "^8.2.3",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/typeorm": "^8.0.2",
    "@nestjsx/crud": "^4.6.2",
    "@nestjsx/crud-typeorm": "^4.6.2",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.88",
    "@types/aws-serverless-express": "^3.3.5",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.13",
    "@types/serverless": "^1.78.39",
    "serverless": "^2.69.0",
    "serverless-offline": "^8.3.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  }
}
